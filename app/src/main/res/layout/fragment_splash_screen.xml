<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:padding="@dimen/sign_in_screen_parent_padding"
    tools:context=".screens.SplashScreenFragment">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sign_up_screen_fullName_text_field_margin_top"
        android:text="@string/welcome_string"
        android:textColor="@color/gray"
        android:textSize="@dimen/sign_in_screen_title_text_size"
        android:textAlignment="center"
        android:fontFamily="@font/source_sans_pro_semi_bold"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="@dimen/sign_in_screen_parent_padding"
        android:gravity="center">

        <Button
            android:id="@+id/signUpButton"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:text="@string/sign_up_screen_button_text_string"
            android:textAllCaps="false"
            android:textSize="@dimen/sign_in_screen_button_text_size"
            android:fontFamily="@font/source_sans_pro"
            />

        <RelativeLayout
            android:id="@+id/layoutDivider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sign_in_screen_title_margin_top"
            android:orientation="horizontal">

            <View
                android:id="@+id/leftLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/OrText"
                />

            <TextView
                android:id="@+id/OrText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/or_option_string"
                android:textColor="@color/gray"
                android:textSize="@dimen/link_text_size"
                android:textAlignment="center"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/user_profile_card_radius"
                />

            <View
                android:id="@+id/rightLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/OrText"
                />

        </RelativeLayout>

        <Button
            android:id="@+id/signInButton"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginTop="@dimen/sign_in_screen_title_margin_top"
            android:text="@string/sign_in_button_text_string"
            android:textAllCaps="false"
            android:textSize="@dimen/sign_in_screen_button_text_size"
            android:fontFamily="@font/source_sans_pro"
            />

    </LinearLayout>

</RelativeLayout>